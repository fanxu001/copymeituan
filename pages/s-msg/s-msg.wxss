.msg-box{
  padding: 12px;

}
.msg-inner-box{
  padding: 7px 14px;
background: #f8f8f9;
border-radius: 10px;
box-shadow: -1px 1px 5px 5px rgba(61,56,53,0.16); 
}
.msg-border{
  border-bottom: 1px solid #E2DDDD;
  margin-bottom: 10px;
}
.msg-title{
  display: flex;
  justify-content: space-between;
  margin-bottom: 14px;
}
.msg-name{
font-size: 14px;
font-weight: 400;
text-align: left;
color: #141313;
letter-spacing: 2px;
}
.msg-time{
font-size: 12px;
font-weight: 400;
text-align: left;
color: #141313;
letter-spacing: 1px;
}
.msg-content{
  width: 249px;
font-size: 11px;
font-weight: 400;
text-align: left;
color: #928f8f;
letter-spacing: 1px;
white-space: nowrap;
text-overflow: ellipsis;
overflow: hidden;
}
.msg-tag{
  width: 13px;
height: 13px;
background: #e23354;
border-radius: 7px;
}
.msg-tag-count{
font-size: 10px;
font-weight: 400;
text-align: center;
color: #ffffff;
}